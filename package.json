{
  "name": "SH_WEB_CHAT",
  "version": "0.0.0",
  "description": "seunghyun web chat",
  "author": "joe1220",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=3.8"
  },
  "scripts": {
    "start": "tsc && cross-env NODE_ENV=production node dist/bin/www.js",
    "watch": "ts-node-dev --respawn --transpileOnly src/bin/www.ts",
    "build": "rm -rf ./dist && tsc -p tsconfig.json",
    "dev": "tsc && nodemon dist/bin/www.js",
    "test": "cross-env NODE_ENV=test jest",
    "cover": "npm run test -- --coverage",
    "lint": "eslint --fix src && prettier --write \"src/**/*.js\"",
    "precommit": "lint-staged",
    "server": "yarn build && pm2 startOrGracefulReload pm2.config.js"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "awilix": "^4.0.1",
    "awilix-koa": "^3.0.0",
    "axios": "^0.18.0",
    "bristol": "^0.4.0",
    "fejl": "^1.0.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-respond": "^2.1.0",
    "koa-router": "^7.4.0",
    "koa2-swagger-ui": "^2.13.0",
    "lodash": "^4.17.11",
    "mysql2": "^1.6.5",
    "palin": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.1.0",
    "sequelize-typescript": "^0.6.7",
    "socket.io": "^2.2.0",
    "swagger-jsdoc": "^3.2.7",
    "yenv": "^2.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.11",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-compose": "^3.2.3",
    "@types/koa-router": "^7.0.40",
    "@types/node": "^11.11.3",
    "@types/prettier": "^1.16.1",
    "@types/sequelize": "^4.27.41",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-source-map-support": "^2.0.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "smid": "^0.1.1",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.3.3333"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "__tests__",
      "src/lib/env",
      "src/bin"
    ]
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "transform-runtime",
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "source-map-support"
        ],
        "ignore": [
          "**/__tests__/**"
        ]
      }
    }
  }
}
